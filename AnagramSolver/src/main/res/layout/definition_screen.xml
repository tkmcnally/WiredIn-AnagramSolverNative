<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/definition_screen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="56sp"
            android:textColor="@color/primary_text_default_material_light"/>

        <TextView
            android:id="@+id/definition_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="56sp"
            android:textColor="#e51c23"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_action_star_dark"
            android:alpha="0.2"
            android:layout_toLeftOf="@id/definition_score_text"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>

    <TextView
        android:id="@+id/definition_screen_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:scrollbars = "vertical"
        android:maxLines = "1000"
        android:textColor="@color/primary_text_default_material_light"/>

    <ProgressBar
        android:id="@+id/definition_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Widget.Material.ProgressBar.Large"
        android:layout_gravity="center_horizontal" />



</LinearLayout>