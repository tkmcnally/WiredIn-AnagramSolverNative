<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NewTheme" parent="NewTheme.Base"/>

    <!-- the theme applied to the application or activity -->
    <style name="NewTheme.Base"
        parent="Theme.AppCompat">
        <!-- Main theme colors -->
        <!--   your app's branding color (for the app bar) -->
        <item name="android:colorPrimary">@color/primary</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:icon">@drawable/anagram</item>
        <item name="android:displayOptions">showHome|showTitle</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">
            @transition/recyclerview_definition_transition
        </item>
        <item name="android:windowSharedElementExitTransition">
            @transition/recyclerview_definition_transition
        </item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLight</item>


        <item name="windowActionBar">false</item>

        <item name="searchViewStyle">@style/AnagramSearchView</item>
        <item name="android:windowBackground">@color/colorPrimaryLight</item>
    </style>


    <style name="AnagramSearchView" parent="Widget.AppCompat.SearchView"/>
</resources>